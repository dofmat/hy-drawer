{
  "name": "hy-drawer",
  "version": "1.0.0-pre.15",
  "description": "A drawer component for the modern web.",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf dist lib doc/source",
    "test": "eslint src",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "npm run build:dev & npm run build:prod & npm run build:lib & npm run build:doc & wait; cp src/style.css dist",
    "build:lib": "babel src --out-dir lib",
    "build:prod": "webpack --env prod --display-optimization-bailout",
    "build:dev": "webpack --env dev --display-optimization-bailout",
    "build:doc": ".scripts/gen-doc.js && .scripts/gen-readme.js",
    "watch": "npm run watch:src & npm run watch:doc",
    "watch:src": "webpack --progress --colors --watch --env dev",
    "watch:doc": "npm run build:doc && onchange 'src/**/*.js' -- npm run build:doc '{{changed}}'",
    "serve": "http-server -s -p $npm_package_config_port",
    "dev": "npm run watch:src & npm run serve",
    "preversion": "sed -i '' 's:/dist:#/dist:' .gitignore",
    "version": "npm run format && npm run build && git add .",
    "postversion": "sed -i '' 's:#/dist:/dist:' .gitignore && git rm --cached -r dist && git add . && git commit -m 'restore preversion .gitignore'"
  },
  "config": {
    "port": "8080"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify-css": "^0.14.0",
    "camelcase": "^4.1.0",
    "docco": "0.7.0",
    "envify": "^4.1.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "html-webpack-plugin": "^2.30.1",
    "onchange": "^3.3.0",
    "prettier": "^1.11.1",
    "raw-loader": "^0.5.1",
    "underscore-template-loader": "^1.0.0",
    "webpack": "3.11.0",
    "webpack-merge": "^4.1.2",
    "yargs": "^11.1.0"
  },
  "dependencies": {
    "create-element-x": "^1.0.3",
    "hy-component": "^1.0.0-pre.16",
    "rxjs": "^5.5.10",
    "rxjs-create-tween": "^1.1.0"
  },
  "optionalDependencies": {
    "jquery": "^3.3.1"
  },
  "directories": {
    "doc": "doc",
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/hy-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/qwtel/hy-drawer/issues"
  },
  "homepage": "https://qwtel.com/hy-drawer/",
  "keywords": [
    "drawer",
    "touch-events",
    "swipe-gestures",
    "webcomponent",
    "jquery",
    "rxjs",
    "hydejack",
    "jquery-plugin",
    "vanilla-js",
    "drawer-layout",
    "custom-element",
    "vanilla",
    "web-components",
    "ui-component",
    "reactive",
    "menu",
    "menu-navigation"
  ],
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "prettier",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      "env"
    ],
    "only": [
      "./src",
      "rxjs",
      "hy-component"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ],
          "only": [
            "./src",
            "rxjs",
            "hy-component"
          ]
        }
      ],
      [
        "envify",
        {
          "DEBUG": false
        }
      ]
    ]
  }
}
