{
  "name": "y-sidebar",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Warning: no test specified\" && exit 0",
    "clean": "rm -r lib",
    "mkdirs": "mkdir -p lib/core lib/vanilla lib/jquery lib/v0 lib/v1",
    "copy:html": "cp src/v0/*.html lib/v0 & cp src/v1/*.html lib/v1",
    "copy:css": "cp src/*.css lib",
    "copy": "npm run mkdirs; npm run copy:html & npm run copy:css",
    "build:core": "browserify src/core/sidebar.js -o lib/core/sidebar.js -t babelify -s y.sidebar.core",
    "build:vanilla": "browserify src/vanilla/sidebar.js -o lib/vanilla/sidebar.js -t babelify -s y.sidebar.vanilla",
    "build:jquery": "browserify src/jquery/sidebar.js -o lib/jquery/sidebar.js -t babelify -s y.sidebar.jquery",
    "build:v0": "browserify src/v0/sidebar.js -o lib/v0/sidebar.js -t babelify -s y.sidebar.v0",
    "build:v1": "browserify src/v1/sidebar.js -o lib/v1/sidebar.js -t babelify -s y.sidebar.v1",
    "build": "npm run copy; npm run build:core & npm run build:vanilla & npm run build:jquery & npm run build:v0 & npm run build:v1",
    "watch:core": "watchify src/core/sidebar.js -o lib/core/sidebar.js -t babelify -s y.sidebar.core",
    "watch:vanilla": "watchify src/vanilla/sidebar.js -o lib/vanilla/sidebar.js -t babelify -s y.sidebar.vanilla",
    "watch:jquery": "watchify src/jquery/sidebar.js -o lib/jquery/sidebar.js -t babelify -s y.sidebar.jquery",
    "watch:v0": "watchify src/v0/sidebar.js -o lib/v0/sidebar.js -t babelify -s y.sidebar.v0",
    "watch:v1": "watchify src/v1/sidebar.js -o lib/v1/sidebar.js -t babelify -s y.sidebar.v1",
    "watch:files": "onchange 'src/**/*.html' -- npm run copy:html & onchange 'src/**/*.css' -- npm run copy:css",
    "watch": "npm run build; npm run watch:files & npm run watch:core & npm run watch:vanilla & npm run watch:jquery & npm run watch:v0 & npm run watch:v1",
    "serve": "http-server -s",
    "dev": "npm run serve & npm run watch",
    "lint": "eslint src",
    "start": "npm run dev",
    "postinstall": "bower i",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run build"
  },
  "author": "Florian Klampfer <f.klampfer@gmail.com> (http://qwtel.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "bower": "^1.7.9",
    "browserify": "^13.1.0",
    "cash": "^0.8.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "http-server": "^0.9.0",
    "onchange": "^3.0.0",
    "watchify": "^3.7.0"
  }
}
