{
  "name": "y-sidebar",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -r lib",
    "copy": "mkdir -p lib; cp src/*.html lib & cp src/*.css lib",
    "build:core": "browserify src/sidebar-core.js -o lib/sidebar-core.js -t babelify -s ySidebarCore",
    "build:vanilla": "browserify src/sidebar-vanilla.js -o lib/sidebar-vanilla.js -t babelify -s ySidebarVanilla",
    "build:v1": "browserify src/sidebar-v1.js -o lib/sidebar-v1.js -t babelify -s ySidebarV1",
    "build": "npm run build:core & npm run build:vanilla & npm run build:v1 & npm run copy",
    "watch:core": "watchify src/sidebar-core.js -o lib/sidebar-core.js -t babelify -s ySidebarCore",
    "watch:vanilla": "watchify src/sidebar-vanilla.js -o lib/sidebar-vanilla.js -t babelify -s ySidebarVanilla",
    "watch:v1": "watchify src/sidebar-v1.js -o lib/sidebar-v1.js -t babelify -s ySidebarV1",
    "watch": "npm run watch:core & npm run watch:vanilla & npm run watch:v1 & onchange 'src/*.html' 'src/*.css' -- npm run copy",
    "serve": "http-server -s",
    "dev": "npm run serve & npm run watch",
    "lint": "eslint src",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run build"
  },
  "author": "Florian Klampfer <f.klampfer@gmail.com> (http://qwtel.com)",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "cash-cp": "^0.2.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-react": "^6.2.0",
    "http-server": "^0.9.0",
    "watchify": "^3.7.0"
  }
}
