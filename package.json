{
  "name": "y-drawer",
  "version": "7.0.0",
  "description": "Y another drawer?",
  "main": "./src/mixin/index.js",
  "scripts": {
    "test": "echo \"Warning: no test specified\" && exit 0",
    "clean": "rm -rf ./dist ./es5",
    "build": "npm run build:dev & npm run build:prod & npm run build:lite & npm run build:es5 & wait",
    "build:es5": "babel src --out-dir es5",
    "build:prod": "webpack --env prod --display-optimization-bailout",
    "build:lite": "webpack --env lite --display-optimization-bailout",
    "build:dev": "webpack --env dev",
    "watch": "webpack --progress --colors --watch --env dev",
    "lint": "eslint src webpack.config.js",
    "prepare": "npm run lint && npm run test && npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "camelcase": "^4.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "raw-loader": "^0.5.1",
    "underscore-template-loader": "^0.7.3",
    "webpack": "^3.1.0",
    "webpack-merge": "^4.1.0",
    "yargs": "^8.0.2"
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "rxjs": "^5.4.1"
  },
  "directories": {
    "lib": "./src",
    "example": "./example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/y-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/qwtel/y-drawer/issues"
  },
  "homepage": "http://qwtel.com/y-drawer",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "es2016"
          ],
          "plugins": [
            "transform-function-bind"
          ],
          "only": [
            "./src",
            "y-component",
            "camelcase"
          ]
        }
      ]
    ]
  }
}
